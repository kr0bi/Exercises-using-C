{
  "windows": {
    "options": {
      "shell": {
        "executable": "c:\\windows\\sysnative\\bash.exe",
        "args": ["-c"]
      }
    }
  },
  "tasks": [
    {
      "type": "shell",
      "label": "clang build active file",
      "command": "clang",
      "args": [
        "-g",
        "-lm",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
    }
  ],
  "version": "2.0.0"
}